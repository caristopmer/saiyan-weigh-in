<h2>User Registration</h2>
<%= form_for(:user, url: "/users") do |f| %>
  <% if @errors %>
    <%= render 'layouts/errors' %>
  <% end %>

  <%= f.label "Email:" %>
  <%= f.email_field :email %><br>

  <%= f.label "Username:" %>
  <%= f.text_field :username %><br>

  <%= f.label "Password:" %>
  <%= f.password_field :password %><br>

  <%= f.label "Confirm Password:" %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.label "Height:" %>
  <%= f.select :height, options_for_select([["4' 6\"", 54], ["4' 7\"", 55], ["4' 8\"", 56], ["4' 9\"", 57], ["4' 10\"", 58], ["4' 11\"", 59], ["5' 0\"", 60], ["5' 1\"", 61], ["5' 2\"", 62], ["5' 3\"", 63], ["5' 4\"", 64], ["5' 5\"", 65], ["5' 6\"", 66], ["5' 7\"", 67], ["5' 8\"", 68], ["5' 9\"", 69], ["5' 10\"", 70], ["5' 11\"", 71], ["6' 0\"", 72], ["6' 1\"", 73], ["6' 2\"", 74], ["6' 3\"", 75], ["6' 4\"", 76], ["6' 5\"", 77], ["6' 6\"", 78], ["6' 7\"", 79], ["6' 8\"", 80], ["6' 9\"", 81], ["6' 10\"", 82], ["6' 11\"", 83], ["7' 0\"", 84]]) %><br>

  <%= f.radio_button :gender, "male" %>
  <%= f.label "Male" %>
  <%= f.radio_button :gender, "female" %>
  <%= f.label "Female" %><br><br>
  
  <%= f.submit "Submit" %>
<% end %>