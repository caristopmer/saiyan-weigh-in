h1#main-title {
  font-family: 'Permanent Marker', cursive;
  font-size: 48px;
  color: #ffd106;
  text-shadow: -3px 0 black, 0 3px black, 3px 0 black, 0 -3px black;
  margin-bottom: 0;
}

h2, h3 {
  font-family: 'Orbitron', sans-serif; 
}

#main-heading {
  width: 70%;
  padding: 0 3%;
  margin: auto;
}

#navigation {
  width: 25%;
  list-style-type: none;
  margin-left: 7%;
  padding-left: 0;
  background-color: hsla(0,0%,100%, .8);
  border: 1px solid black;
  border-radius: 5px;
  text-align: center;
}

#navigation>li {
  display: inline;
}

body {
  background-image: url(<%= asset_path "namek-background.png" %>);
  background-size: cover;
  background-attachment: fixed;
  background-color: #329a20;
  font-family: 'Nunito', sans-serif;
}

#content {
  background-color: hsla(0,0%,100%, .8);
  max-width: 1500px;
  width: 70%;
  margin: auto;
  padding: 20px 3%;
  margin-bottom: 20px;
  border: 2px solid black;
  border-radius: 5px;
  min-height: 300px;
}

.chart-container {
  border: 1px solid black;
  width: 95%;
  height: 300px;
  margin: auto;
}

.chart-buttons, .chart-selection-buttons {
  width: 95%;
  height: 30px;
  margin: auto;
  text-align: center;
  padding-top: 10px;
}

.chart-selection-buttons>form>.chart-button {
  width: 33%;
}

.button-selected {
  background-color: cyan;
}

.chart-button {
  width: 24.5%;
  height: 80%;
}

.entry-disclaimer {
  font-size: 12px;
  text-align: center;
  margin-bottom: 0;
}

.weights-container, .heats-container, .teams-container, .power-levels-container {
  display: inline-block;
  width: 49%;
  vertical-align: top;
  text-align: center;
  border: 1px solid black;
  margin-top: 10px;
  padding-bottom: 10px;
  height: 400px;
}

.stats-list {
  list-style-type: none;
}

.stats-list>li {
  display: inline-block;
  width: 49%;
}


#errors {
  color: red;
}